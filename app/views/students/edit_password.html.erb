<style>
  body {
    background-color: #004B2D; /* New background color */
    color: #fff;
    font-family: Arial, sans-serif;
  }

  .password-container {
    max-width: 400px;
    margin: 50px auto;
    padding: 30px;
    background: #fff;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    text-align: center;
    color: #000; /* Ensuring text inside form is black */
  }

  .password-container h1 {
    margin-bottom: 20px;
    font-size: 24px;
    color: #000; /* Title in black */
  }

  .password-form label {
    display: block;
    text-align: left;
    margin: 10px 0 5px;
    font-weight: bold;
    color: #000; /* Labels in black */
  }

  .password-form input {
    width: 100%;
    padding: 10px;
    margin-bottom: 15px;
    border: 1px solid #ccc;
    border-radius: 4px;
    font-size: 16px;
    color: #000;
    background-color: #fff;
  }

  .password-form button {
    width: 100%;
    padding: 12px;
    background-color: #004B2D;
    color: white;
    border: none;
    border-radius: 4px;
    font-size: 18px;
    cursor: pointer;
    margin-bottom: 10px;
  }

  .password-form button:hover {
    background-color: #00311E;
  }

  .back-button {
    display: inline-block;
    padding: 14px 180px;
    background-color: #004B2D;
    color: white; 
    margin-right: 90%;
    text-decoration: none;
    border-radius: 4px;
    font-size: 16px;
  }

  .back-button:hover {
    background-color: #00311E;
  }
</style>

<div class="password-container">
  <h1>Change Password</h1>

  <%= form_with model: @student, url: update_password_path(@student), method: :patch, class: "password-form" do |f| %>
    <label for="current_password">Current Password</label>
    <%= f.password_field :current_password, required: true %>

    <label for="password">New Password</label>
    <%= f.password_field :password, required: true %>

    <label for="password_confirmation">Confirm New Password</label>
    <%= f.password_field :password_confirmation, required: true %>

    <button type="submit">Update Password</button>
  <% end %>

  <a href="javascript:history.back()" class="back-button">Back</a>
</div>
